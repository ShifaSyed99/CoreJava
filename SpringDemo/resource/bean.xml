<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    	 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <bean id = "stud" class="com.spring.entity.Student">
    
    	<property name="sId" value="101"></property>
        <property name="sName" value="jane doe"></property>
        
    </bean>
    
    <bean id = "course" class="com.spring.withconstructor.Course">
    
    	<constructor-arg value = "101" type = "int"></constructor-arg>
    	<constructor-arg value = "Java" ></constructor-arg>
    	<constructor-arg value = "500" type = "int"></constructor-arg>
    	<constructor-arg value = "3 Months" ></constructor-arg>
    </bean>
</beans>
 