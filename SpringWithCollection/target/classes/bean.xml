<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    	 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <bean id = "post" class="com.spring.collection.Post">
    
    	<constructor-arg value = "101" type = "int"></constructor-arg>
    	<constructor-arg value = "Java Full Stack Developer Course" ></constructor-arg>
    	<constructor-arg>
    	<list>
    	<value> Learning Opportunity </value>
    	<value> Informative </value>
    	<value> Vast Scope </value>
    	<value> Based in Thane </value>
    	</list>
    	</constructor-arg>
    	
    	
  </bean>	
  
  <bean id = "q" class="com.spring.withmap.Question">
    
    	<constructor-arg value = "101" type = "int"></constructor-arg>
    	<constructor-arg value = "What is IOC ?" ></constructor-arg>
    	<constructor-arg>
    	<map>
    	<entry key = "IOC is used to configure objects." value = " Answered by : Sam"></entry>
    	<entry key = "IOC is used to manage objects." value = " Answered by : Jane"></entry>
    	<entry key = "IOC is Inversion Control" value = " Answered by : Harry"></entry>
    	</map>
    	</constructor-arg>
    	 </bean>
</beans>